<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- name属性指定类名（全限定名） table指明表名，不指明table数据默认的表名和实体名一致 -->
    <class name="com.jkxy.entity.Poets" table="poets">
    	<!-- type指明当前字段的类型    name对应实体中的属性名 -->
        <id type="integer" name="id">
      
        </id>
        <property name="name" type="string"></property>
        <property name="created_at" type="date"></property>
        <property name="updated_at" type="date"></property>
    
       	
        
    </class>
</hibernate-mapping>